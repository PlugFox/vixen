{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run (debug, memory)",
      "type": "dart",
      "program": "bin/vixen.dart",
      "request": "launch",
      "flutterMode": "debug",
      "cwd": "${workspaceFolder}",
      "args": [],
      "env": {
        "CONFIG_VERBOSE": "debug",
        "CONFIG_DATABASE": ":memory:",
      }
    },
    {
      "name": "Run (debug)",
      "type": "dart",
      "program": "bin/vixen.dart",
      "request": "launch",
      "flutterMode": "debug",
      "cwd": "${workspaceFolder}",
      "args": [],
      "env": {
        "CONFIG_VERBOSE": "debug",
      }
    },
    // https://pub.dev/packages/test
    {
      "name": "Test (VM)",
      "request": "launch",
      "type": "dart",
      "program": "test/unit_test.dart",
      "env": {
        "ENVIRONMENT": "test"
      },
      "console": "debugConsole",
      "runTestsOnDevice": false,
      "templateFor": "test",
      "toolArgs": [
        "--color",
        "--debug",
        "--coverage=.coverage",
        "--reporter=expanded",
        "--platform=vm", // chrome
        "--file-reporter=json:.coverage/tests.json",
        "--timeout=30s",
        "--concurrency=12"
      ],
      "args": []
    }
  ]
}